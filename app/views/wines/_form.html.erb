<%= form_for(@wine) do |f| %>
	<%= f.label :name %> <%= f.text_field :name, autofocus: true %> <br><br>
	<%= f.label :year %> <%= f.text_field :year %> <br><br>
	<%= f.label :winery %> <%= f.text_field :winery %> <br><br>
	<%= f.label :country %> <%= f.text_field :country %> <br><br>
	<%= f.label :varietal %> <%= f.text_field :varietal %> <br><br>
	<p>
		<%= f.submit %>
		<%= link_to 'Cancel Action', wines_path %>
	</p>
<% end %>